# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=8787

# Database
# For local development
DATABASE_URL=postgresql://maplify:maplify123@localhost:5432/maplify

# For production (use strong credentials!)
# DATABASE_URL=postgresql://maplify:STRONG_PASSWORD@postgres:5432/maplify

# MinIO Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false

# Authentication
JWT_SECRET=your-secret-key-change-in-production

# CORS
# For local development
CORS_ORIGIN=http://localhost:5173

# For production (update with your domain)
# CORS_ORIGIN=https://www.maplifytech.com

# Storage Limits
STORAGE_LIMIT_BYTES=104857600  # 100MB per user
MAX_BOARD_SIZE_BYTES=10485760  # 10MB per board
