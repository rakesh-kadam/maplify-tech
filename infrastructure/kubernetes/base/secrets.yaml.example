# Add secrets.yaml to .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: drawboard-secrets
  namespace: drawboard
type: Opaque
stringData:
  # JWT Secret (generate with: openssl rand -base64 32)
  JWT_SECRET: "CHANGE_ME_generate_with_openssl_rand_base64_32"

  # Database URL
  DATABASE_URL: "postgresql://drawboard:CHANGE_ME_PASSWORD@postgres:5432/drawboard"

  # Session Secret
  SESSION_SECRET: "CHANGE_ME_generate_with_openssl_rand_base64_32"
---
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secrets
  namespace: drawboard
type: Opaque
stringData:
  POSTGRES_DB: "drawboard"
  POSTGRES_USER: "drawboard"
  POSTGRES_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
---
apiVersion: v1
kind: Secret
metadata:
  name: minio-secrets
  namespace: drawboard
type: Opaque
stringData:
  MINIO_ROOT_USER: "minioadmin"
  MINIO_ROOT_PASSWORD: "CHANGE_ME_STRONG_PASSWORD_MIN_8_CHARS"
